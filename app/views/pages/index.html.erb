
  <%= stylesheet_link_tag 'index', media: 'all', 'data-turbolinks-track': 'reload' %>

  <div class="page-header">
   <h1>DevCamp Students</h1>
  <div class="list">
    <%= link_to "List View", show_path, :class => "btn btn-info" %>
  </div>
  </div> 


   <% @student.each do |s| %>
    <div class="inner">
        <div class="content">
          <div class="card">
            <div class="firstinfo"><img src="https://s3.amazonaws.com/uifaces/faces/twitter/mrvanz/128.jpg"/>
              <div class="profileinfo">
                <h1><%= s.first_name %></h1>
                <h3><%= s.tagline %></h3>
                <p class="bio"><%= s.descrption %></p>
              </div>
              <div class="profile-link">
                <%= link_to "Profile", show_path, :class => "btn-profile" %>
              </div>
            </div>
          </div>
          <div class="badgescard"> <span class="profile info"><%= s.github_name %></span></div>
        </div>
      </div>
 
   <% end %>



  







